@model IndexViewModel

@{
    
}

<section id="stats" class="stats">
    <div class="container container--85">
        <div class="stats--item">

            <em>@Model.Quantity</em>

            <h3>Oddanych worków</h3>
            <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Eius est beatae, quod accusamus illum tempora!</p>
        </div>

        <div class="stats--item">

            <em>@Model.SupportedInstitutions</em>

            <h3>Wspartych organizacji</h3>
            <p>Lorem ipsum dolor sit amet consectetur, adipisicing elit. Laboriosam magnam, sint nihil cupiditate quas quam.</p>
        </div>

    </div>
</section>




<section id="steps" class="steps">
    <h2>Wystarczą 4 proste kroki</h2>

    <div class="steps--container">
        <form asp-controller="Donation" asp-action="Donate" method="post">
            <div class="steps--item">
                <h3> Wybierz rzeczy</h3>
                @foreach (var item in Model.Categories)
                {

                    <input type="checkbox" name="@item.Name" value="@item.Id" />@item.Name

                }
                <a asp-controller="Home" asp-action="Index" class="btn btn-warning">Przejdź dalej</a>
            </div>
            <div class="steps--item">
                <h3>Spakuj je</h3>
                <p>skorzystaj z worków na śmieci</p>
                <label>Podaj ilość worków</label>
                <input type="number" value="@Model.Quantity" min="1" />
                <a asp-controller="Home" asp-action="Index" class="btn btn-warning">Przejdź dalej</a>
            </div>
            <div class="steps--item">
                <h3>Zdecyduj komu chcesz pomóc</h3>
                <p>wybierz zaufane miejsce</p>
                @foreach (var item in Model.Institutions)
                {

                    <input type="checkbox" name="@item.Name" />@item.Name

                }
                <a asp-controller="Home" asp-action="Index" class="btn btn-warning">Przejdź dalej</a>
            </div>
            <div class="steps--item">
                <h3>Zamów kuriera</h3>
                <p>kurier przyjedzie w dogodnym terminie</p>
                <div class="form-group">
                    <label asp-for="Donation.Street"></label>
                    <input class="form-control" asp-for="Donation.Street" />
                    <span asp-validation-for="Donation.Street"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Donation.City"></label>
                    <textarea id="editor" asp-for="Donation.City"></textarea>
                    <span asp-validation-for="Donation.City"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Donation.ZipCode"></label>
                    <input class="form-control" asp-for="Donation.ZipCode" />
                    <span asp-validation-for="Donation.ZipCode"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Donation.PickUpDate"></label>
                    <input type="date" class="form-control" asp-for="Donation.PickUpDate" />
                    <span asp-validation-for="Donation.PickUpDate"></span>
                </div>
            </div>
            <input type="submit" value="Wyślij" class="btn btn-danger" />
        </form>
    </div>










    <a href="#" class="btn btn--large">Załóż konto</a>
</section>

<section id="about-us" class="about-us">
    <div class="about-us--text">
        <h2>O nas</h2>
        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Voluptas vitae animi rem pariatur incidunt libero optio esse quisquam illo omnis.</p>
        <img src="~/images/signature.svg" class="about-us--text-signature" alt="Signature" />
    </div>
    <div class="about-us--image"><img src="~/images/about-us.jpg" alt="People in circle" /></div>
</section>

<section id="help" class="help">
    <h2>Komu pomagamy?</h2>

    <!-- SLIDE 1 -->
    <div class="help--slides active" data-id="1">
        <p>
            W naszej bazie znajdziesz listę zweryfikowanych Fundacji, z którymi współpracujemy.
            Możesz sprawdzić czym się zajmują.
        </p>

        <ul class="help--slides-items">

            <li>
                @foreach (var item in Model.Institutions)
                {

                    @if (item.Id % 2 == 1)
                    {
                        <div class="col">
                            <div class="title">@item.Name</div>
                            <div class="subtitle">
                                @item.Description
                            </div>
                        </div>

                    }

                }
            </li>
            <li>
                @foreach (var item in Model.Institutions)
                {

                    @if (item.Id % 2 == 0)
                    {
                        <div class="col">
                            <div class="title">@item.Name</div>
                            <div class="subtitle">
                                @item.Description
                            </div>
                        </div>

                    }
                }

            </li>

        </ul>

    </div>

</section>
